<?xml version="1.0" encoding="$encoding"?>
<jnlp
    spec="$jnlpspec"
    codebase="$jnlpCodebase"
    href="zero-${project.version}.jnlp?">
  <information>
#if($project.Name)
    <title>$project.Name</title>
#end
#if($project.Organization.Name)
    <vendor>$project.Organization.Name</vendor>
#end
#if($project.Url)
    <homepage href="$project.Url"/>
#end
#if($project.Description)
    <description>$project.Description</description>
#end
#if($offlineAllowed)
    <offline-allowed/>
#end
  </information>
#if($allPermissions)
  <security>
     <all-permissions/>
  </security>
#end
  <resources>
    <j2se version="1.7+" java-vm-args="-Xmx2048m"/>
     $dependencies
  </resources>
  <applet-desc 
	name="$project.Name"
	main-class="$mainClass"
	width="800"
	height="800"
	/>
  <update check="always"/>
</jnlp>

